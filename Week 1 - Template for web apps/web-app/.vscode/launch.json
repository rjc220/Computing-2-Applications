{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "fx-dev debug",
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "reloadOnAttach": true,
        "file": "${workspaceFolder}/index.html",
        "preferences": {
          "security.fileuri.strict_origin_policy": false
        }
      },
      {

        "name": "Node Server",
        
        "type": "node",
        
        "request": "launch",
        
        "skipFiles": [
        
        "<node_internals>/**"
        
        ],
        
        "program": "${workspaceFolder}/server.js"
        
        }
    ]
  }